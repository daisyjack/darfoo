<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:paddingBottom="4dip" android:layout_width="wrap_content"
    android:layout_gravity="center"
    android:paddingRight="20dp"
    android:paddingLeft="20dp"
    android:paddingTop="6dp"
    android:background="#ffe3e3e3"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    android:layout_centerInParent="true"
    android:gravity="center">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        android:layout_margin="0dp"
        android:background="@drawable/music_textview_bg"
        android:padding="4dp">

        <ImageView
            android:id="@+id/video_cover"
            android:layout_width="230dp"
            android:layout_height="126dp"
            android:layout_centerHorizontal="true"
            android:layout_margin="0dp"
            android:padding="0dp"
            android:scaleType="fitXY"
            >

        </ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_below="@id/video_cover"
            android:layout_height="wrap_content"
            android:text="TextView01"
            android:textSize="15sp"
            android:layout_marginTop="2dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/video_title">
        </TextView>

        <ImageView
            android:id="@+id/video_download_status_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_above="@id/video_title"
            android:visibility="invisible"
            android:layout_alignLeft="@id/video_cover"
            android:layout_alignStart="@id/video_cover" />

        <ImageButton
            android:id="@+id/resume_download_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:layout_centerHorizontal="true"
            android:layout_alignBottom="@id/video_cover"
            android:layout_marginBottom="10dp"
            android:visibility="invisible"
            android:src="@drawable/ic_resume_download_btn"/>

    </RelativeLayout>


</RelativeLayout>