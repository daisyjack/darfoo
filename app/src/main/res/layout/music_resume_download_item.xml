<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/detail_layout"
    android:layout_width="match_parent"
    android:layout_height="49dp"
    android:gravity="center"
    android:background="#FFFFFF"
    android:layout_gravity="center"

    android:orientation="horizontal">


    <TextView
        android:id="@+id/item_pos"
        android:layout_weight="83"
        android:layout_height="49dp"
        android:text="序号"
        android:gravity="center"
        android:layout_width="0dp" />

    <TextView
        android:id="@+id/item_title"
        android:layout_weight="419"
        android:layout_height="49dp"
        android:text="标题"
        android:gravity="center"
        android:layout_width="0dp" />

    <TextView
        android:id="@+id/item_artist"
        android:layout_weight="236"
        android:layout_height="49dp"
        android:text="无艺名"
        android:gravity="center"
        android:layout_width="0dp" />


    <LinearLayout
        android:id="@+id/music_download_panel"
        android:layout_weight="285"
        android:layout_height="49dp"
        android:gravity="center"
        android:visibility="visible"
        android:focusable="false"
        android:layout_width="0dp" >

        <TextView
            android:id="@+id/music_download_status"
            android:layout_height="wrap_content"
            android:text="已下载"
            android:gravity="center"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:layout_width="wrap_content" />

        <ImageButton
            android:id="@+id/music_resume_download_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:layout_margin="0dp"
            android:visibility="invisible"
            android:src="@drawable/ic_resume_download_btn"
            />

    </LinearLayout>

</LinearLayout>
