<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/detail_layout"
    android:layout_width="match_parent"
    android:layout_height="49dp"
    android:gravity="center"
    android:background="#FFFFFF"
    android:layout_gravity="center"

    android:orientation="horizontal">


    <TextView
        android:id="@+id/item_pos"
        android:layout_weight="83"
        android:layout_height="49dp"
        android:text="序号"
        android:gravity="center"
        android:layout_width="0dp" />

    <TextView
        android:id="@+id/item_title"
        android:layout_weight="419"
        android:layout_height="49dp"
        android:text="标题"
        android:gravity="center"
        android:layout_width="0dp" />

    <TextView
        android:id="@+id/item_artist"
        android:layout_weight="236"
        android:layout_height="49dp"
        android:text="无艺名"
        android:gravity="center"
        android:layout_width="0dp" />

    <TextView
        android:id="@+id/item_duration"
        android:layout_weight="236"
        android:layout_height="49dp"
        android:gravity="center"
        android:layout_width="0dp" />


    <LinearLayout
        android:id="@+id/music_edit_panel"
        android:layout_weight="285"
        android:layout_height="49dp"
        android:gravity="center"
        android:descendantFocusability="afterDescendants"
        android:visibility="invisible"
        android:layout_width="0dp" >

        <ImageButton
            android:id="@+id/music_up_button"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="49dp"
            android:layout_marginRight="20dp"
            android:background="@null"
            android:layout_margin="0dp"
            android:layout_toLeftOf="@+id/music_down_button"
            android:src="@drawable/up_music"
            />

        <ImageButton
            android:id="@+id/music_down_button"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="49dp"
            android:layout_marginRight="20dp"
            android:background="@null"
            android:layout_margin="0dp"
            android:layout_toLeftOf="@+id/music_down_button"
            android:src="@drawable/down_music"
            />

        <ImageButton
            android:id="@+id/music_delete_button"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="49dp"
            android:layout_marginRight="20dp"
            android:background="@null"
            android:layout_margin="0dp"
            android:layout_toLeftOf="@+id/music_down_button"
            android:src="@drawable/delete_music"
            />


    </LinearLayout>

</LinearLayout>
