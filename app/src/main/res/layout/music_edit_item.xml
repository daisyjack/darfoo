<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="49dp" >

   <TextView
        android:id="@+id/edit_key"
        android:layout_width="83dp"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:gravity="center"
        android:textSize="18dp"
        android:text="Text" />

    <Button
        android:id="@+id/music_up_button"
        android:layout_width="20dp"
        android:layout_height="20dp"
        
        android:layout_alignBaseline="@+id/music_delete_button"
        android:layout_marginRight="56dp"
        android:layout_toLeftOf="@+id/music_down_button"
        android:layout_centerInParent="true"
        android:background="@drawable/up_music" />

    <Button
        android:id="@+id/music_down_button"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginRight="56dp"
        android:layout_toLeftOf="@+id/music_delete_button"
        android:layout_centerInParent="true"
        android:background="@drawable/down_music" />

    <Button
        android:id="@+id/music_delete_button"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:layout_marginRight="40dp"
        android:background="@drawable/delete_music" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="164dp"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/music_edit_textView"
        android:gravity="center"
        android:textSize="18dp"
        android:text="TextView3" />

    <TextView
        android:id="@+id/music_edit_textView"
        android:layout_width="286dp"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/edit_key"
        android:gravity="center"
        android:textSize="18dp"
        android:text="TextView2" />

</RelativeLayout>
