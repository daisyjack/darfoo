
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:paddingBottom="4dip"
    android:layout_width="wrap_content"
    android:layout_gravity="center"
    android:paddingRight="10dp"
    android:paddingLeft="10dp"
    android:paddingTop="6dp"
    android:layout_marginLeft="0dp"
    android:layout_marginRight="0dp"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    android:layout_centerInParent="true"
    android:gravity="center">


    <RelativeLayout
        android:layout_width="250dp"
        android:layout_height="match_parent"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        android:layout_margin="0dp"
        android:background="@drawable/music_textview_bg"
        android:padding="4dp">

        <ImageView
            android:id="@+id/video_edit_cover"
            android:layout_width="240dp"
            android:layout_height="140dp"
            android:layout_centerHorizontal="true"
            android:layout_margin="0dp"
            android:padding="0dp"
            android:scaleType="fitXY"
            >

        </ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_below="@id/video_edit_cover"
            android:layout_height="wrap_content"
            android:text="TextView01"
            android:textSize="15sp"
            android:layout_marginTop="2dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/video_edit_title">
        </TextView>

        <Button
            android:id="@+id/video_edit_delete_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/delete_button"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_above="@+id/video_edit_title"
            android:layout_alignLeft="@+id/video_edit_cover"
            android:layout_alignStart="@+id/video_edit_cover" />

    </RelativeLayout>


</RelativeLayout>