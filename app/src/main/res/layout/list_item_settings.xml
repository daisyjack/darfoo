<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_selectable_item"
    android:padding="@dimen/activity_vertical_margin">

    <ImageView
        android:id="@+id/imageview_settings_item"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="480dp" />

    <TextView
        android:id="@+id/textview_settings_item"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_marginLeft="24dp"
        android:layout_toRightOf="@id/imageview_settings_item"
        android:gravity="center"
        android:textSize="@dimen/text_size" />

</RelativeLayout>